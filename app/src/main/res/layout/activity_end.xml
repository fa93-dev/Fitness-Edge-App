<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faraz.navigationapp.Body.end">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Endomorph:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:textAlignment="viewStart"
            android:textSize="28sp"
            android:textColor="@color/label_back_dark" />

        <TextView
            android:text="Big, high body fat, often pear-shaped, with a high tendency to store body fat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:fontFamily="sans-serif"
            android:textSize="20sp" />

        <TextView
            android:text="@string/end_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:fontFamily="sans-serif"
            android:typeface="normal"
            android:textSize="20sp"
            android:maxLines="4"
            android:textAlignment="viewStart" />

        <ImageButton
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView21"
            android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:clickable="true" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/textView21"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/show"
            android:background="#000" />

        <ImageButton
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView21"
            android:background="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:clickable="true"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:srcCompat="@drawable/end_im"
            android:id="@+id/endI"
            android:scaleType="fitStart" />

        <TextView
            android:text="Endomorph men begin by eating:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:fontFamily="monospace"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="• 2 palms of protein dense foods at each meal;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:id="@+id/textView33" />

        <TextView
            android:text="• 2 fists of vegetables at each meal;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView40"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"/>

        <TextView
            android:text="• 1 cupped handful of carb dense foods at each meal;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView41"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"/>

        <TextView
            android:text="• 3 thumbs of fat dense foods at each meal."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="198dp"
            app:srcCompat="@drawable/end_im2"
            android:id="@+id/endI1"
            android:scaleType="fitStart" />


        <TextView
            android:text="Endomorph women begin by eating:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView39"
            android:fontFamily="monospace"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="• 1 palm of protein dense foods at each meal;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView38"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"/>

        <TextView
            android:text="• 1 fist of vegetables at each meal;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"/>

        <TextView
            android:text="• 0.5 cupped handful of carb dense foods at each meal;"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView35"
            android:typeface="normal"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


    </LinearLayout>
</ScrollView>
