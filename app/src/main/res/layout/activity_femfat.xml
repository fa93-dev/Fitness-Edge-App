<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_femfat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faraz.navigationapp.HealthCalc.femFat">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/femw"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView62"
        android:hint="Kgs"
        android:layout_width="70sp" />

    <TextView
        android:text="Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView62"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/femw"
        android:layout_alignBottom="@+id/femw"
        android:layout_alignEnd="@+id/textView66" />

    <EditText
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:id="@+id/femwai"
        android:layout_below="@+id/femw"
        android:layout_alignStart="@+id/femw"
        android:hint="@string/inches" />

    <TextView
        android:text="Wrist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView64"
        android:textSize="22sp"
        android:layout_below="@+id/femwai"
        android:layout_alignEnd="@+id/textView63" />

    <TextView
        android:text="Body Fat Percentage is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView68"
        android:textSize="22sp"
        android:layout_below="@+id/femres"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/femres1"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/textView68"
        android:layout_alignBottom="@+id/textView68"
        android:layout_toEndOf="@+id/textView68"
        android:layout_marginStart="9dp" />

    <TextView
        android:text="Your Body Fat is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/femres"
        android:textSize="22sp"
        android:layout_below="@+id/fatfembut"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Calculate"
        android:layout_marginTop="9dp"
        android:id="@+id/fatfembut"
        android:textSize="18sp"
        android:layout_height="70sp"
        android:layout_width="140sp"
        android:layout_below="@+id/femfore"
        android:theme="@style/FBButton"
        android:layout_alignParentStart="true"
        android:elevation="2dp"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/femhip"
        android:hint="@string/inches"
        android:layout_alignBaseline="@+id/textView65"
        android:layout_alignBottom="@+id/textView65"
        android:layout_alignStart="@+id/femwrist" />

    <EditText
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/femwrist"
        android:hint="@string/inches"
        android:layout_alignBaseline="@+id/textView64"
        android:layout_alignBottom="@+id/textView64"
        android:layout_alignStart="@+id/femwai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res1"
        android:textSize="22sp"
        android:layout_marginStart="13dp"
        android:layout_above="@+id/textView68"
        android:layout_toEndOf="@+id/femres" />

    <TextView
        android:text="Waist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView63"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/femwai"
        android:layout_alignBottom="@+id/femwai"
        android:layout_alignEnd="@+id/textView62" />

    <TextView
        android:text="Hip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView65"
        android:textSize="22sp"
        android:layout_below="@+id/femwrist"
        android:layout_alignStart="@+id/textView64"
        android:layout_marginStart="7dp" />

    <TextView
        android:text="Forearm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView66"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/femfore"
        android:layout_alignBottom="@+id/femfore"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <EditText
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:id="@+id/femfore"
        android:hint="@string/inches"
        android:layout_below="@+id/femhip"
        android:layout_alignStart="@+id/femhip" />
</RelativeLayout>
